<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Please Enter"
        android:layout_centerHorizontal="true"
        android:id="@+id/tv21"
        android:textSize="25dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv22"
        android:text="Morning"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/tv21"
        android:layout_marginLeft="20dp"
        android:textSize="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv23"
        android:text="Evening"
        android:layout_marginTop="140dp"
        android:layout_below="@+id/tv22"
        android:layout_marginLeft="20dp"
        android:textSize="20dp"/>

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rg1"
        android:orientation="vertical"
        android:layout_alignTop="@+id/tv22"
        android:layout_toRightOf="@+id/tv22"
        android:layout_marginLeft="15dp">
        <!--//android:layout_toLeftOf="@+id/tv22"
        //android:layout_toStartOf="@+id/tv22"-->

        <RadioButton
            android:id="@+id/rb1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="1"
            android:layout_marginRight="10dp"/>

        <RadioButton
            android:id="@+id/rb2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="3/4"
            android:layout_marginRight="10dp"/>

        <RadioButton
            android:id="@+id/rb3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="1/2"
            android:layout_marginRight="10dp"/>
        <RadioButton
            android:id="@+id/rb4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="1/4"
            android:layout_marginRight="10dp"/>

        <RadioButton
            android:id="@+id/rb5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="None"
            android:layout_marginRight="10dp"/>

    </RadioGroup>

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rg2"
        android:orientation="vertical"
        android:layout_alignTop="@+id/tv23"
        android:layout_toRightOf="@+id/tv23"
        android:layout_marginLeft="15dp">
        <!--//android:layout_toLeftOf="@+id/tv22"
        //android:layout_toStartOf="@+id/tv22"-->

        <RadioButton
            android:id="@+id/rb6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:text="1"
            android:layout_marginRight="10dp"/>

        <RadioButton
            android:id="@+id/rb7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:text="3/4"
            android:layout_marginRight="10dp"/>
        <RadioButton
            android:id="@+id/rb8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:text="1/2"
            android:layout_marginRight="10dp"/>
        <RadioButton
            android:id="@+id/rb9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:text="1/4"
            android:layout_marginRight="10dp"/>
        <RadioButton
            android:id="@+id/rb10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:text="None"
            android:layout_marginRight="10dp"/>

    </RadioGroup>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ed1"
        android:layout_toRightOf="@+id/rg1"
        android:layout_alignTop="@+id/rg1"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="20dp"
        android:hint="Remarks"/>
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="310dp"
        android:layout_toRightOf="@+id/rg2"
        android:id="@+id/ed2"
        android:hint="Remarks"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/b3"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_below="@+id/ed2"
        android:text="Todays Quantity"
        android:layout_marginTop="100dp"/>



    <!--<Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/b4"
        android:text="BACK"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/b3"
        android:layout_marginTop="20dp"/>-->

</RelativeLayout>